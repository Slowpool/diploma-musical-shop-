@using DataLayer.Models
@using Microsoft.AspNetCore.Identity
@using Common
@using MusicalShopApp.Views.Shared

@inject UserManager<AppUser> userManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dropdown-check-list.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MusicalShopApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @* <a class="navbar-brand" asp-area="" asp-controller="Goods" asp-action="Index">MusicalShopApp</a> *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon">toggler</span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @{
                            // <form class="goods-search" asp-action="Search" method="POST">
                            //     <input class="goods-search" type="text" name="q" placeholder="Поиск товара" />
                            // </form>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Goods" asp-action="Index">Товары</a>
                            </li>
                            // await Html.RenderPartialAsync("_PartialNavigationItem", new PartialNavigationItemModel(CommonNames.ConsultantRole, "Goods", "Товары"));
                            @* <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Sales" asp-action="Index">Оформление продажи</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="PurchaseReturn" asp-action="Index">Возврат покупки</a>
                        </li> *@
                        }
                        @await Html.PartialAsync("_PartialNavigationItem", new PartialNavigationItemModel(CommonNames.SellerRole, "Goods", "Cart", "Корзина"))
                        @await Html.PartialAsync("_PartialNavigationItem", new PartialNavigationItemModel(CommonNames.SellerRole, "PurchaseReturn", "Index", "Возврат покупки"))
                        @await Html.PartialAsync("_PartialNavigationItem", new PartialNavigationItemModel(CommonNames.AdminRole, "Reports", "Index", "Отчеты"))
                        @await Html.PartialAsync("_PartialNavigationItem", new PartialNavigationItemModel(CommonNames.AdminRole, "AdminPanel", "Index", "Панель администратора"))

                        @* @Html.RenderPartialAsync("_AdminActionsPartial") *@
                        @* <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Reports" asp-action="Index">Отчеты</a>
                        </li> *@

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Goods" asp-action="Privacy">Политика конфиденциальности</a>
                        </li>

                    </ul>
                    @{
                        await Html.RenderPartialAsync("_LoginPartial");
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MusicalShopApp - <a asp-area="" asp-controller="Goods" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
